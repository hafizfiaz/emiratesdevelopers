<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherited_fgr_tree" model="ir.ui.view">
            <field name="name">fgr.payment.request.inherit.tree</field>
            <field name="model">fgr.payment.request</field>
            <field name="arch" type="xml">
                <tree string="FGR Payment Request" default_order="create_date desc">
                    <field name="spa_id"/>
                    <field name="related_booking_id"/>
                    <field name="partner_id"/>
                    <field name="discount_value"/>
                    <field name="price"/>
                    <field name="total_spa_value"/>
                    <field name="state" widget="badge"
                           decoration-danger="state in ('under_review','under_approval')"
                           decoration-info="state == 'draft'"
                           decoration-warning="state in ('cancel', 'rejected')"
                           decoration-success="state in ('approved','done')"/>
                </tree>
            </field>
        </record>


        <record id="inherited_approval_tree" model="ir.ui.view">
            <field name="name">approval.approval.inherit.tree</field>
            <field name="model">approval.approval</field>
            <field name="arch" type="xml">
                <tree string="Approval">
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="remarks"/>
                    <field name="state" widget="badge"
                           decoration-danger="state in ('under_gm_review','under_ceo_review')"
                           decoration-info="state == 'draft'"
                           decoration-warning="state in ('cancelled', 'rejected')"
                           decoration-success="state == 'approve'"/>
                </tree>
            </field>
        </record>

        <record id="account.view_account_payment_tree" model="ir.ui.view">
            <field name="name">account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <tree edit="false" sample="1" default_order="create_date desc">
                    <header>
                        <button name="action_post" type="object" string="Confirm"/>
                    </header>
                    <field name="create_date" optional="show"/>
                    <field name="date" string="Payment Date" optional="show"/>
                    <field name="old_payment_date" string="Payment Date" optional="hide"/>
                    <field name="id" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="old_name" string="Seq Number" optional="show"/>
                    <field name="journal_id" optional="show"/>
                    <field name="asset_project_id" optional="show"/>
                    <field name="property_id" optional="show"/>
                    <field name="spa_id" optional="show"/>
                    <field name="reference" optional="show"/>
                    <field name="partner_id" string="Customer" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                    <field name="amount" sum="Amount" optional="show"/>
                    <field name="check_number" optional="show"/>
                    <field name="maturity_date" optional="show"/>
                    <field name="bank_deposit" optional="show"/>
                    <field name="write_uid" optional="show"/>
                    <field name="write_date" optional="show"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" optional="show"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                </tree>
            </field>
        </record>


        <record id="inherited_payment_tree" model="ir.ui.view">
            <field name="name">account.payment.inherit.tree</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <tree string="Payments">
                    <field name="create_date" optional="show"/>
                    <field name="date" string="Payment Date" optional="show"/>
                    <field name="old_payment_date" string="Payment Date" optional="hide"/>
                    <field name="name" optional="show"/>
                    <field name="journal_id" optional="show"/>
                    <field name="write_date"/>
                    <field name="check_number" optional="show"/>
                    <field name="maturity_date" optional="show"/>
                    <field name="partner_id" string="Vendor"/>
                    <field name="asset_project_id" optional="show"/>
                    <field name="property_id" optional="show"/>
                    <field name="collection_type_id" optional="show"/>
                    <field name="amount" sum="Amount" optional="show"/>
                    <field name="bank_deposit" optional="show"/>
                    <field name="reference" optional="show"/>
                    <field name="state" widget="badge"
                           decoration-danger="state in ('under_approval','under_review')"
                           decoration-info="state == 'draft'"
                           decoration-warning="state in ('cancelled', 'refused')"
                           decoration-success="state in ('settle','posted','collected')" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="inherited_comm_tree" model="ir.ui.view">
            <field name="name">commission.invoice.inherit.tree</field>
            <field name="model">commission.invoice</field>
            <field name="arch" type="xml">
                <tree string="Commissions Invoice" default_order="create_date desc">
                    <field name="create_date"/>
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="total_price"/>
                    <field name="total_commission_amount"/>
                    <field name="invoiced_amount" sum="Commission Invoiced"/>
                    <field name="total_commission_paid"/>
                    <field name="balance_commission"/>
                    <field name="agent"/>
                    <field name="asset_project_id"/>
                    <field name="property_id"/>
                    <field name="create_uid"/>
                    <field name="state" widget="badge"
                           decoration-danger="state in ('under_legal_review','under_manager_review')"
                           decoration-info="state == 'draft'"
                           decoration-warning="state in ('cancel', 'rejected')"
                           decoration-success="state in ('paid','approved')"/>
                    <field name="amount_total"/>
                    <field name="write_date" string="Last Updated On"/>
                </tree>
            </field>
        </record>

        <record id="inherited_spa_tree" model="ir.ui.view">
            <field name="name">sale.order.spa.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="SPA">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" string="SPA Number"/>
                    <!--                    <field name="booking_id"/>-->
                    <field name="date_order" string="SPA Date" optional="show"/>
                    <!--                    <field name="commitment_date" groups="sale.group_sale_order_dates"/>-->
                    <!--                    <field name="expected_date" groups="sale.group_sale_order_dates"/>-->
                    <field name="partner_id"/>
                    <!--                    <field name="partner_address_email" string="Email"/>-->
                    <!--                    <field name="nationality_id"/>-->
                    <field name="user_id" optional="hide"/>
                    <field name="salesperson_ids" widget="many2many_tags" optional="show"/>
                    <field name="asset_project_id"/>
                    <field name="property_id"/>
                    <field name="tag_ids" widget="many2many_tags" optional="show"/>
                    <field name="amount_total" sum="Total Tax Included" widget="monetary" optional="show"/>
                    <field name="oqood_fee" sum="Oqood Fee Charged" widget="monetary" optional="show"/>
                    <field name="admin_fee" sum="Admin Fee Charged" widget="monetary" optional="show"/>
                    <!--                    <field name="others" sum="Others" widget="monetary" invisible="1"/>-->
                    <field name="total_spa_value" sum="Total SPA Value" widget="monetary" optional="show"/>
                    <field name="instalmnt_bls_pend_plus_admin_oqood" sum="Total Due Amount" widget="monetary" optional="show"/>
                    <field name="matured_pdcs" sum="Amount Received (Realized Collections)" optional="show"/>
                    <field name="balance_due_collection" sum="Balance Due Collection" optional="show"/>
                    <field name="total_receipts" sum="Total Receipts" widget="monetary" optional="show"/>
                    <field name="receipts_perc" sum="Collection Percentage" optional="show"/>
                    <!--<field name="net_receipts" sum="Net Receipts" widget="monetary"/>-->
                    <field name="pending_balance" sum="Pending Receivables" widget="monetary" optional="show"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="pending_balance_perc" optional="show"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'spa_draft'"
                           decoration-warning="state in ('under_sd_admin_review', 'rejected')"
                           decoration-success="state in ('sale', 'paid')"/>
                    <field name="receivable_status_id" optional="show"/>
                    <!--                    <field name="recent_installment_due_date"/>-->
                    <!--                    <field name="recent_collection_date"/>-->
                </tree>
            </field>
        </record>

        <record id="inherited_booking_tree" model="ir.ui.view">
            <field name="name">sale.order.booking.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="booking">
                    <field name="create_date"/>
                    <field name="booking_date"/>
                    <field name="partner_id" string="Contact" optional="show"/>
                    <!--                <field name="mobile"/>-->
                    <field name="property_id" string="Unit" optional="show"/>
                    <!--                <field name="unit_type_id" string="Unit Type"/>-->
                    <field name="user_id" optional="hide"/>
                    <field name="salesperson_ids" widget="many2many_tags" optional="show"/>
                    <field name="asset_project_id" string="Project" optional="show"/>
                    <field name="property_inc_vat_amount" optional="show"/>
                    <field name="schedule_total" optional="show"/>
                    <field name="oqood_fee" sum="Oqood Fee Charged" widget="monetary" optional="show"/>
                    <field name="admin_fee" sum="Admin Fee Charged" widget="monetary" optional="show"/>
                    <!--                    <field name="others" sum="Others" widget="monetary" invisible="1"/>-->
                    <field name="net_receipts" sum="Total Booking Value" widget="monetary" optional="show"/>
                    <field name="total_receipts" sum="Total Receipts" widget="monetary" optional="show"/>
                    <field name="matured_pdcs" string="Amount Received (Realized Collections)"
                           sum="Amount Received (Realized Collections)" widget="monetary" optional="show"/>
                    <field name="matured_pdcs_perc" string="Amount Received (Realized Collections) %"
                           widget="monetary" optional="show"/>
                    <field name="pending_balance" sum="Pending Receivables" widget="monetary" optional="show"/>
                    <field name="user_id" invisible="1"/>
                    <field name="state" widget="badge"
                           decoration-danger="state == 'review'"
                           decoration-info="state == 'draft'"
                           decoration-warning="state in ('under_cancellation', 'booking_rejected')"
                           decoration-success="state == 'confirm_spa'"/>
                    <field name="booking_days" optional="show"/>
                    <field name="agent_id" optional="show"/>
                    <field name="net_commission_sp" optional="show"/>
                    <!--                <field name="total_comm_paid_ext"/>-->
                    <!--                <field name="bls_comm_ext"/>-->
                </tree>
            </field>
        </record>

